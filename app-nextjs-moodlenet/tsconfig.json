{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": "./src/",
    "paths": {
      //"@/context": ["server/types/context"],
      "@/lib-server/*": ["lib/server/*"],
      "@/lib-ui/*": ["lib/ui/*"],
      "@/lib-mock/*": ["lib/mock/*"],
      "@/components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@/common/*": ["common/*"],
      "@/_common/*": ["app/_common/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../app-nextjs-moodlenet/.next/types/**/*.ts",
    "../dist/app-nextjs-moodlenet/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
