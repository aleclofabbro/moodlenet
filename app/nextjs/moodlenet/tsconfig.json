{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": "./src/",
    "sourceRoot": "./src/",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../../app-nextjs-moodlenet/.next/types/**/*.ts",
    "../../../dist/app-nextjs-moodlenet/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/lib/mock/server/session-ctx/layouts/module.stsx"
  ],
  "exclude": [
    "zz__legacy",
    "ui-cmps",
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
