{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    // "baseUrl": "./src/",
    //"sourceRoot": "./src/",
    "paths": {
      "#*": ["./src/*", "app/nextjs/moodlenet/src/*"],
      "@moodle/domain": ["domain/src/index.ts"],
      "@moodle/t-utils": ["t-utils/src/index.ts"]
    }
    // "baseUrl": "./src/",
    // "sourceRoot": "./src/",
    // "paths": {
    //   "@/*": ["./*"]
    // }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
    // "src/lib/mock/server/session-ctx/layouts/module.stsx"
  ],
  "exclude": [
    "zz__legacy",
    "ui-cmps",
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
